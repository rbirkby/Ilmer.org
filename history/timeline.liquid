---
layout: timeline
title: 'Timeline'
description: 'A detailed timeline of the history of Ilmer from 1066 to present-day.'
category: history
tags: [post]
image: images/timeline.png
---

<script type="module">
  document.getElementsByTagName('select')[0].addEventListener('change', function() {
    const category = this.value;
    document.querySelectorAll('.timeline-item').forEach(item => {
      const categories = JSON.parse(item.getAttribute('data-categories'));
      item.classList.toggle('hidden', category !== '' && !categories.includes(category));
    });
  });

  document.getElementById('scroll-to-top').addEventListener('click', function() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>

<button
  id="scroll-to-top"
  title="Click to scroll back to the top of the page"
  style="display: none;">
  â–²
</button>


<script type="module" src="/assets/js/anniversaries.js"></script>
<timeline-anniversaries>
  {% assign filteredEvents = historicalEvents | where_exp: "event", "event.hidden != true" %}
  <script type="application/json" data-events>
    [{% for event in filteredEvents %}{"date":{{ event.date | jsonify }},"title":{{ event.title | jsonify }}}{% unless forloop.last %},{% endunless %}{% endfor %}]
  </script>
</timeline-anniversaries>

{% assign labels = historicalEvents | uniqueLabels %}
<select name="filter">
  <option value="">
    <span class="label-name">All Events</span>
    <span class="label-count">{{ historicalEvents | size }}</span>
  </option>
  {% for label in labels %}
    <option value="{{ label.label }}">
      <span class="label-name">{{ label.label }}</span>
      <span class="label-count">{{ label.count }}</span>
    </option>
  {% endfor %}
</select>

<div id="timeline-container">
  {% for event in historicalEvents %}
    {% unless event.hidden %}
      <div class="timeline-item" data-categories='{{ event.labels | jsonStringify }}'>
        <div class="timeline-icon"></div>
        <div class="timeline-content">
          <h2>
            <span class="date">{{ event.date }}</span>
            {{ event.title }}</h2>
          {% if event.smallimage %}
            <a href="{{event.image}}"><img src="{{ event.smallimage }}" alt="{{ event.title }}"></a>
          {% elsif event.image %}
            <a href="{{event.image}}"><img src="{{ event.image }}" alt="{{ event.title }}"></a>
          {% endif %}

          {{ event.description | renderContent: "md" }}
          {% if event.references != empty %}
            <span class="reference">Source(s): {{ event.references | join: ' <br> ' | renderMarkdownInline }}</span>
          {% endif %}
        </div>
      </div>
    {% endunless %}
  {% endfor %}

</div>
