   }
*/

  /* Timeline Container and Central Line */#timeline-container {
    position: relative;
    /* max-width: 900px; */
    margin: 0 auto;
    line-height: normal;

    &::after {
      content: '';
      position: absolute;
      width: 4px;
      background-color: #d1d5da;
      top: 0;
      bottom: 0;
      left: 50%;
      margin-left: -2px;
      z-index: 1;
    }

    .timeline-item {
      padding: 5px 40px;
      position: relative;
      background-color: inherit;
      width: 50%;
      box-sizing: border-box;
      transition: all 0.3s ease;

      &.left {
        left: 0;

        .timeline-icon {
          right: -12px;
        }

        img {
          float: right;
          padding: 0 0 0 8px;
        }

        .reference {
          clear: right;
        }

        &::before {
          right: 30px;
          border-width: 10px 0 10px 10px;
          border-color: transparent transparent transparent #e1e4e8;
        }
      }

      &.right {
        left: 50%;

        .timeline-icon {
          left: -12px;
        }

        img {
          float: left;
          padding: 0 8px 0 0;
        }

        .reference {
          clear: left;
        }

        &::before {
          left: 30px;
          border-width: 10px 10px 10px 0;
          border-color: transparent #e1e4e8 transparent transparent;
        }
      }

      .timeline-icon {
        position: absolute;
        width: 16px;
        height: 16px;
        right: -8px;
        background-color: #f6f8fa;
        border: 4px solid #0366d6;
        top: 25px;
        border-radius: 50%;
        z-index: 2;
      }

      &::before {
        content: ' ';
        height: 0;
        position: absolute;
        top: 28px;
        width: 0;
        z-index: 2;
        border: medium solid #e1e4e8;
      }

      .timeline-content {
        padding: 20px;
        background-color: #ffffff;
        position: relative;
        border: 1px solid #e1e4e8;
        border-radius: 6px;
        box-shadow: 0 1px 3px rgba(27, 31, 35, 0.05);

        h2 {
          margin-top: 0;
          font-size: 1.2em;
          color: #24292e;
        }

        img {
          max-height: 150px;
          border-radius: 4px;
          object-fit: contain;
        }

        .date {
          background-color: #0366d6;
          color: white;
          padding: 3px 8px;
          border-radius: 4px;
          font-size: 0.85em;
          margin-right: 10px;
          font-weight: 600;
        }

        p {
          margin: 10px 0 0;
          line-height: 1.6;
          color: #586069;
        }

        .reference {
          display: block;
          margin-top: 12px;
          font-size: 0.8em;
          font-style: italic;
          color: #6a737d;
          text-align: right;
        }
      }
    }
  }

  /* Responsive design for smaller screens */
  @media screen and (max-width: 768px) {
    h1 {
      font-size: 2em;
    }

    #timeline-container {
      &::after {
        left: 31px;
      }

      .timeline-item {
        width: 100%;
        padding-left: 70px;
        padding-right: 25px;

        &.left,
        &.right {
          left: 0;
        }

        &.left .timeline-icon,
        &.right .timeline-icon {
          left: 19px;
        }

        &.left::before,
        &.right::before {
          left: 60px;
          border-width: 10px 10px 10px 0;
          border-color: transparent #e1e4e8 transparent transparent;
        }
      }
    }
  }
</style>

