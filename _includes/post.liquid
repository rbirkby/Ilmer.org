{% include "head" %}

<header>
  <div class="container">
    <div class="mast">
      <a href="/">Ilmer Past</a>
    </div>
    <nav>
      <a href="/map">Location</a>
      <a href="/news">News</a>
      <a href="/about">About</a>
    </nav>
  </div>
</header>
<main>
  {% if image %}
    <figure>
      <img src="/{{image}}">
    </figure>
  {% endif %}
  <section class="article">

    <h1>{{title}}</h1>

    <p>{{description}}</p>

    {{content}}
  </section>
</main> 
<footer>
  <div class="container">
    An Ilmer community project
  </div>
</footer>

{% comment %} {% if image.feature %}
  <div class="overlay"></div>
  {% if image.feature contains 'http://' | escape %}
  <div class="featured-image" style="background-image: url({{ image.feature }})"></div>
  {% else %}
  <div class="featured-image" style="background-image: url({{ site.url }}/images/{{ image.feature }})"></div>
  {% endif %}
{% else %}
  <div class="overlay"></div>
  <div class="featured-image" style="background-image: url({{ site.url }}/images/typewriter.jpg)"></div>
{% endif %}


      <article class="wrap post">
        <header class="post-header">
          <hgroup>
            <h1>{{title}}</h1>
            <p class="date">{{date | date: "%b %d, %Y" }}</p>
            <p class="intro">{% if description %}{{ description }}{% else %}{{ tagline }}{% endif %}</p>
          </hgroup>
        </header>

        {{ content }}

      <a class="share" href="https://twitter.com/intent/tweet?text=&quot;{{ title }}&quot;%20{{ site.canonical }}{{ url }}%20via%20&#64;{{ site.owner.twitter }}" data-dnt="true">Share</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

      {% if comments %}
      <aside class="disqus">
        <div id="disqus_thread"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = '{{ site.owner.disqus }}'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
      </aside>
      {% endif %}


      </article>

    </section>
</div> {% endcomment %}

{% comment %} {% include "footer" %} {% endcomment %}
